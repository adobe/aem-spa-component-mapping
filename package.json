    "ajv": "^6.12.3",
    "auto-changelog": "^2.2.0",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-loader": "^8.1.0",
    "babel-plugin-istanbul": "^6.0.0",
    "babel-plugin-transform-decorators": "6.24.1",
    "babel-preset-env": "^1.7.0",
    "clean-webpack-plugin": "^3.0.0",
    "doxdox": "^2.0.3",
    "doxdox-plugin-markdown": "^2.0.0",
    "eslint": "^7.6.0",
    "eslint-plugin-react": "^7.20.5",
    "inject-loader": "^4.0.1",
    "istanbul": "^0.4.5",
    "istanbul-instrumenter-loader": "^3.0.1",
    "jest": "^26.2.2",
    "jsdoc": "^3.6.5",
    "markdown-include": "^0.4.3",
    "ts-jest": "^26.1.4",
    "ts-loader": "^8.0.2",
    "tslint": "^6.1.3",
    "tslint-etc": "^1.13.0",
    "typescript": "^3.9.7",
    "webpack": "^4.44.1",
    "webpack-cli": "^3.3.12"
  }
